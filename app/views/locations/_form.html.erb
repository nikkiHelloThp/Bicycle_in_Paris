<div class="container">
	<%= form_tag root_path, :method => :get do %>
	  <div class="form-group">
	    <%= text_field_tag :search, params[:search], class:"form-control" %>
	  </div>
	  <%= submit_tag "Search Near", :name => nil, class:"btn btn-primary btn-lg btn-block" %>
	<% end %>
</div>

<% unless params[:search].present? %>
  <p align="center"><b>Default address: <%= @thp %></b></p>
<% end %>